<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_pais_detalle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ad.applas.PaisDetalleActivity">
    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:layout_margin="10dp"
        android:textSize="20dp"
        android:text="País:"/>
    <TextView
        android:id="@+id/textViewPais"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:layout_toRightOf="@+id/textView1"
        android:layout_margin="10dp"
        android:textSize="20dp"
        android:text="País"/>
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:layout_margin="10dp"
        android:textSize="20dp"
        android:text="Capital:"
        android:layout_below="@+id/textView1"/>
    <TextView
        android:id="@+id/textViewCapitalPais"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:layout_alignTop="@+id/textView2"
        android:layout_toRightOf="@+id/textView2"
        android:layout_marginLeft="10dp"
        android:textSize="20dp"
        android:text="Cap"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:layout_margin="10dp"
        android:textSize="20dp"
        android:text="Región:"
        android:layout_below="@+id/textView2"/>
    <TextView
        android:id="@+id/textViewRegionPais"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:layout_alignTop="@+id/textView3"
        android:layout_toRightOf="@+id/textView3"
        android:layout_marginLeft="10dp"
        android:textSize="20dp"
        android:text="Reg"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:layout_margin="10dp"
        android:textSize="20dp"
        android:text="Subregión:"
        android:layout_below="@+id/textView3"/>
    <TextView
    android:id="@+id/textViewSubregionPais"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textColor="@android:color/black"
    android:layout_alignTop="@+id/textView4"
    android:layout_toRightOf="@+id/textView4"
    android:layout_marginLeft="10dp"
    android:textSize="20dp"
    android:text="País"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:layout_margin="10dp"
        android:textSize="20dp"
        android:text="alpha2Code:"
        android:layout_below="@+id/textView4"/>
    <TextView
        android:id="@+id/textViewAlpha2CodePais"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:layout_alignTop="@+id/textView5"
        android:layout_toRightOf="@+id/textView5"
        android:layout_marginLeft="10dp"
        android:textSize="20dp"
        android:text="alpha2"/>
    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:layout_margin="10dp"
        android:textSize="20dp"
        android:text="alpha3Code:"
        android:layout_below="@+id/textView5"/>
    <TextView
        android:id="@+id/textViewAlpha3CodePais"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:layout_alignTop="@+id/textView6"
        android:layout_toRightOf="@+id/textView6"
        android:layout_marginLeft="10dp"
        android:textSize="20dp"
        android:text="alpha3"/>
    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:layout_margin="10dp"
        android:textSize="20dp"
        android:text="Zona/s \nHoraria/s:"
        android:layout_below="@+id/textView6"/>
    <ListView
        android:id="@+id/listViewZonaHorariaPais"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:textColor="@android:color/black"
        android:layout_alignTop="@+id/textView7"
        android:layout_toRightOf="@+id/textView7"
        android:layout_marginLeft="10dp"
        android:textSize="20dp"
        android:text="ZonaH"/>
    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:layout_margin="10dp"
        android:textSize="20dp"
        android:text="Idiomas:"
        android:layout_below="@+id/listViewZonaHorariaPais"/>

    <ListView
        android:id="@+id/listaIdiomas"
        android:layout_width="230dp"
        android:layout_height="100dp"
        android:layout_alignTop="@+id/textView8"
        android:layout_alignLeft="@+id/textViewRegionPais"
        android:layout_alignStart="@+id/textViewRegionPais" />
</RelativeLayout>
