<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <TextView
        android:id="@+id/textViewAsunto"
        android:text="Asunto"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="10dp"
        android:layout_alignParentTop="true"
        android:ellipsize="end"
        android:maxLines="1"
        android:layout_toRightOf="@+id/textViewLetra"
        android:textAppearance="?attr/textAppearanceListItem"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textViewLetra"
        android:text="L"
        android:textSize="30dp"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textViewContenido"
        android:text="contenido"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:textAppearance="?attr/textAppearanceListItem"
        android:layout_below="@+id/textViewAsunto"
        android:layout_alignLeft="@+id/textViewAsunto"
        android:layout_alignStart="@+id/textViewAsunto"
        android:textSize="14sp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="?attr/colorControlNormal" />

    <ImageView
        android:src="@drawable/ic_star_border_black_24dp"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/textViewAsunto"
        android:layout_alignStart="@+id/textViewAsunto"
        android:layout_marginLeft="267dp"
        android:layout_marginStart="267dp"
        android:id="@+id/imageViewFav"
        android:layout_width="30dp"
        android:layout_height="30dp" />
</RelativeLayout>
