<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:text="Cruxskunk Keyboard Case Turns your iPad into a Laptop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@android:color/black"
        android:textSize="30dp"
        android:layout_margin="10dp"
        android:id="@+id/textView5" />
    <TextView
        android:id="@+id/textView6"
        android:layout_below="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="mashable.com / Anita Li"
        android:layout_marginLeft="10dp"
        android:textSize="20dp"/>
    <ImageView
        android:id="@+id/imgVw7"
        android:layout_below="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/pc"
        />
    <TextView
        android:id="@+id/textView7"
        android:layout_below="@+id/imgVw7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:text="Cruxcase has debuted a new keyboard case that turns your iPad into a Laptop.\nFor $155, the Cruxskunk has full-sized QWERTY ..."
        android:layout_margin="10dp"
        android:textSize="16dp"/>
    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_below="@+id/textView7"
        android:layout_marginTop="20dp"/>
    <ImageView
        android:id="@+id/imageBottom1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view1"
        android:layout_margin="15dp"
        android:src="@drawable/eme"
        />
    <TextView
        android:id="@+id/txvwBottom1"
        android:layout_alignTop="@+id/imageBottom1"
        android:layout_toRightOf="@+id/imageBottom1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mashable Tech"
        android:textColor="@android:color/black"/>
    <ImageView
        android:id="@+id/imageBottom2"
        android:layout_alignTop="@+id/txvwBottom1"
        android:layout_alignBottom="@+id/txvwBottom1"
        android:layout_toRightOf="@+id/txvwBottom1"
        android:layout_marginLeft="8dp"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:src="@drawable/twitter_logo"/>
    <TextView
        android:id="@+id/txvwBottom2"
        android:layout_alignTop="@+id/imageBottom2"
        android:layout_toRightOf="@+id/imageBottom2"
        android:layout_marginLeft="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:text="1 hour"/>
    <TextView
        android:id="@+id/txvwBottom3"
        android:layout_alignLeft="@+id/txvwBottom1"
        android:layout_alignBottom="@+id/imageBottom1"
        android:layout_below="@+id/txvwBottom1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13dp"
        android:text="Most shared in Technology"/>
</RelativeLayout>