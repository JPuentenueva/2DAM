<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example1.admin.sumatoriodeprimos.MainActivity">

    <TextView
        android:text="suma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sumaDePrimos"
        android:textSize="36sp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="61dp" />

    <Button
        android:text="Sumar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/botonSuma"
        android:layout_above="@+id/sumaDePrimos"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="92dp"
        android:onClick="sumarPrimos"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/primo2"
        android:textSize="36sp"
        android:layout_above="@+id/botonPrimo2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:hint="primo2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/primo1"
        android:textSize="36sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="48dp"
        android:hint="primo1" />

    <Button
        android:text="Primo 1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/botonPrimo1"
        android:layout_below="@+id/primo1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="calcularPrimo1"/>

    <Button
        android:text="Primo 2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/botonPrimo2"
        android:layout_below="@+id/primo1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="calcularPrimo2" />
</RelativeLayout>
