<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@android:color/darker_gray">

    <TextView
        android:text="contacto 600000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textViewContacto"
        android:textSize="24sp"
        android:textColor="@android:color/background_light" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/imageViewTipoLlamada" />

    <TextView
        android:text="duracion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewDuracion"
        android:textSize="18sp"
        android:textColor="?android:attr/panelColorForeground"
        android:layout_below="@+id/imageViewTipoLlamada"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="fecha y hora"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewFechaHora"
        android:textSize="18sp"
        android:textColor="?android:attr/panelColorForeground"
        android:layout_alignBaseline="@+id/textViewDuracion"
        android:layout_alignBottom="@+id/textViewDuracion"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>