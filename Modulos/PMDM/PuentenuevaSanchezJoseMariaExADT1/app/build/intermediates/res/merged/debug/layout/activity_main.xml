<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ad.puentenuevasanchezjosemariaexadt1.MainActivity"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <EditText
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editTextCantidad"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="16dp"
            android:hint="Cantidad"
            android:layout_width="230dp"
            android:textAlignment="center" />

        <Button
            android:text="AÃ±adir"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/editTextCantidad"
            android:layout_toRightOf="@+id/editTextCantidad"
            android:layout_toEndOf="@+id/editTextCantidad"
            android:layout_marginLeft="11dp"
            android:layout_marginStart="11dp"
            android:id="@+id/button_anyadir"
            android:layout_width="150dp"
            android:onClick="anyadirProducto"/>

        <EditText
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editTextConcepto"
            android:layout_width="match_parent"
            android:hint="Concepto"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textAlignment="center" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/textVieWMultiline" />
    </RelativeLayout>
</LinearLayout>
