<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/fondo"
    tools:context="ledjacket.myapplication.MainActivity">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">
        <Button
            android:id="@+id/btnOnOff"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:onClick="encender_apagar"
            android:background="@drawable/ic_shutdown"/>
        <Button
            android:id="@+id/btnLeft"
            android:layout_alignParentTop="@+id/btnOnOff"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_below="@+id/fondoShut"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:onClick="encenderIzquierda"
            android:background="@drawable/ic_left_arrow"/>

        <Button
            android:id="@+id/btnRight"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_below="@+id/fondoShut"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:onClick="encenderDerecha"
            android:background="@drawable/ic_right_arrow"/>

        <ImageView
            android:id="@+id/fondoBtnRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/btnRight"
            android:layout_alignBottom="@+id/btnRight"
            android:layout_alignRight="@+id/btnRight"
            android:layout_alignLeft="@+id/btnRight"
            android:visibility="invisible"
            android:src="@drawable/fondo_flecha_on"/>
        <ImageView
            android:id="@+id/fondoBtnLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/btnLeft"
            android:layout_alignBottom="@+id/btnLeft"
            android:layout_alignRight="@+id/btnLeft"
            android:layout_alignLeft="@+id/btnLeft"
            android:visibility="invisible"
            android:src="@drawable/fondo_flecha_on"/>
        <ImageView
            android:id="@+id/fondoShut"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/fondo_off"
            />
    </RelativeLayout>
</RelativeLayout>
